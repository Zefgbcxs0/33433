import random


class Person:
    def __init__(self, name):
        self.name = name
        self.health = 100
        self.mood = 100
        self.hunger = 100
        self.money = 50
        self.day = 1
        self.education = 0
        self.level = 1
        self.job = "–ë–µ–∑—Ä–æ–±—ñ—Ç–Ω–∏–π"
        self.house = False

    def show_status(self):
        print("\n======================")
        print(f"üìÖ –î–µ–Ω—å: {self.day}")
        print(f"üë§ –Ü–º'—è: {self.name}")
        print(f"‚≠ê –†—ñ–≤–µ–Ω—å: {self.level}")
        print(f"üíº –†–æ–±–æ—Ç–∞: {self.job}")
        print(f"üéì –û—Å–≤—ñ—Ç–∞: {self.education}")
        print(f"‚ù§Ô∏è –ó–¥–æ—Ä–æ–≤'—è: {self.health}")
        print(f"üòä –ù–∞—Å—Ç—Ä—ñ–π: {self.mood}")
        print(f"üçî –°–∏—Ç—ñ—Å—Ç—å: {self.hunger}")
        print(f"üí∞ –ì—Ä–æ—à—ñ: {self.money}")
        print(f"üè† –ë—É–¥–∏–Ω–æ–∫: {'–Ñ' if self.house else '–ù–µ–º–∞—î'}")
        print("======================")

    def study(self):
        print("–¢–∏ –Ω–∞–≤—á–∞—î—à—Å—è üìö")
        self.education += 10
        self.mood -= 5
        self.hunger -= 10
        self.check_job()

    def work(self):
        if self.job == "–ë–µ–∑—Ä–æ–±—ñ—Ç–Ω–∏–π":
            print("–£ —Ç–µ–±–µ –Ω–µ–º–∞—î —Ä–æ–±–æ—Ç–∏!")
            return

        salary = 20 * self.level
        print(f"–¢–∏ –ø—Ä–∞—Ü—é—î—à —è–∫ {self.job} —ñ –∑–∞—Ä–æ–±–ª—è—î—à {salary}$")
        self.money += salary
        self.mood -= 10
        self.hunger -= 15

    def eat(self):
        if self.money >= 10:
            print("–¢–∏ –ø–æ—ó–≤ üçï")
            self.hunger += 25
            self.money -= 10
        else:
            print("–ù–µ–¥–æ—Å—Ç–∞—Ç–Ω—å–æ –≥—Ä–æ—à–µ–π!")

    def sleep(self):
        print("–¢–∏ –ø–æ—Å–ø–∞–≤ üò¥")
        self.health += 15
        self.mood += 10
        self.hunger -= 10

    def relax(self):
        print("–¢–∏ –≤—ñ–¥–ø–æ—á–∏–≤ üéÆ")
        self.mood += 20
        self.hunger -= 10

    def buy_house(self):
        if self.money >= 200 and not self.house:
            self.money -= 200
            self.house = True
            print("–¢–∏ –∫—É–ø–∏–≤ –±—É–¥–∏–Ω–æ–∫! üè†")
        else:
            print("–ù–µ–¥–æ—Å—Ç–∞—Ç–Ω—å–æ –≥—Ä–æ—à–µ–π –∞–±–æ –≤–∂–µ –º–∞—î—à –±—É–¥–∏–Ω–æ–∫.")

    def random_event(self):
        event = random.randint(1, 5)
        if event == 1:
            print("üé≤ –¢–∏ –≤–∏–≥—Ä–∞–≤ 50$!")
            self.money += 50
        elif event == 2:
            print("üé≤ –¢–∏ –∑–∞—Ö–≤–æ—Ä—ñ–≤...")
            self.health -= 20
        elif event == 3:
            print("üé≤ –¢–∏ –∑–Ω–∞–π—à–æ–≤ –Ω–æ–≤–∏—Ö –¥—Ä—É–∑—ñ–≤!")
            self.mood += 15
        elif event == 4:
            print("üé≤ –ù–µ—Å–ø–æ–¥—ñ–≤–∞–Ω—ñ –≤–∏—Ç—Ä–∞—Ç–∏ -30$")
            self.money -= 30

    def check_job(self):
        if self.education >= 50 and self.job == "–ë–µ–∑—Ä–æ–±—ñ—Ç–Ω–∏–π":
            self.job = "–û—Ñ—ñ—Å–Ω–∏–π –ø—Ä–∞—Ü—ñ–≤–Ω–∏–∫"
            print("üéâ –¢–∏ –æ—Ç—Ä–∏–º–∞–≤ —Ä–æ–±–æ—Ç—É!")
        if self.education >= 100:
            self.level = 2
            self.job = "–ü—Ä–æ–≥—Ä–∞–º—ñ—Å—Ç"
        if self.education >= 200:
            self.level = 3
            self.job = "–ë—ñ–∑–Ω–µ—Å –º–µ–Ω"

    def next_day(self):
        self.day += 1
        self.hunger -= 10

        if self.hunger <= 0:
            self.health -= 20
            print("‚ö†Ô∏è –¢–∏ –≥–æ–ª–æ–¥–Ω–∏–π! –ó–¥–æ—Ä–æ–≤'—è –ø–∞–¥–∞—î!")

        self.random_event()

        if self.health <= 0:
            print("üíÄ –¢–∏ –ø—Ä–æ–≥—Ä–∞–≤!")
            return False
        return True


name = input("–í–≤–µ–¥–∏ —ñ–º'—è –ø–µ—Ä—Å–æ–Ω–∞–∂–∞: ")
player = Person(name)

while True:
    player.show_status()
    print("\n–û–±–µ—Ä—ñ—Ç—å –¥—ñ—é:")
    print("1 - –ù–∞–≤—á–∞—Ç–∏—Å—è")
    print("2 - –ü—Ä–∞—Ü—é–≤–∞—Ç–∏")
    print("3 - –á—Å—Ç–∏")
    print("4 - –°–ø–∞—Ç–∏")
    print("5 - –í—ñ–¥–ø–æ—á–∏—Ç–∏")
    print("6 - –ö—É–ø–∏—Ç–∏ –±—É–¥–∏–Ω–æ–∫")
    print("7 - –í–∏–π—Ç–∏")

    choice = input("–¢–≤—ñ–π –≤–∏–±—ñ—Ä: ")

    if choice == "1":
        player.study()
    elif choice == "2":
        player.work()
    elif choice == "3":
        player.eat()
    elif choice == "4":
        player.sleep()
    elif choice == "5":
        player.relax()
    elif choice == "6":
        player.buy_house()
    elif choice == "7":
        print("–ì—Ä—É –∑–∞–≤–µ—Ä—à–µ–Ω–æ.")
        break
    else:
        print("–ù–µ–≤—ñ—Ä–Ω–∏–π –≤–∏–±—ñ—Ä!")

    if not player.next_day():
        break
